<html>
	
	<% include ./partials/head.ejs %>

	<body>
		<center>
			<h3>Signup</h3><br>
			<form class="form-control" action="/signup" method="post">
				<% if(failureMessage.length>0) { %>
				<div class="alert alert-danger"><%= failureMessage %></div>
				<% } %>
				Username:<br>
				<input type="text" name="username"><br>
				Email:<br>
				<input type="email" name="email"><br>
				Password:<br>
				<input type="password" name="password"><br>
				<input type="submit" value="submit">
			</form>
			<div class="btn btn-default"><a href="/">Home</a></div>
			<div class="btn btn-default"><a href="/login">Login</a></div>
		</center>
		<% include ./partials/loadjs.ejs %>		
	</body>

</html>